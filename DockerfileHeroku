FROM maven:3-jdk-11
ADD . /application
WORKDIR /application
RUN mvn install:install-file -Dfile=ojdbc6-12.1.0.2.jar -DgroupId=com.oracle  -DartifactId=oracle -Dversion=12.1.0.2 -Dpackaging=jar -DgeneratePom=true
RUN mvn package
RUN mvn clean install
FROM openjdk:11-jdk
VOLUME /tmp
COPY --from=0 /application/target/*.jar /app/lib/application.jar
WORKDIR /app/lib
CMD ["java", "-jar", "-Doracle.jdbc.timezoneAsRegion=false", "application.jar"]
